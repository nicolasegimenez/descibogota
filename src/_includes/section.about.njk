{% set videoShown = false %}
{% for item in collections.sections %}
  {% if item.data.type === 'about' %}
    <div id="about" class="w-full min-h-screen flex flex-col justify-center items-center py-12">
      <div class="self-center text-center w-full sm:w-2/3 xl:w-1/2 px-4 sm:px:0">
        <h2 class="font-bold tracking-wider text-gray-800 text-4xl mb-4">{{ item.data.title }}</h2>
        <div class="font-light text-black text-xl">
          {{ item.templateContent | safe }}
        </div>
      </div>
      
      {% if not videoShown %}
        <iframe class="my-12 max-w-full mx-auto" width="560" height="315" src="https://www.youtube.com/embed/5ORvbCIW39o?si=Unr4zQIa7fW6LFAA" frameborder="0" allowfullscreen></iframe>
        {% set videoShown = true %}
      {% endif %}
      
    </div>
  {% endif %}
{% endfor %}
